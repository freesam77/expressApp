<% include ../partials/header %>

<div class="col-md-6 offset-md-3">
        <h1>Create a new post</h1>
        <form action="/posts" method="POST">

                <div class="form-group">
                        <label for="camp[name]">Name</label>
                        <input class="form-control" name="camp[name]"type="text">
                </div>

                <div class="form-group">
                        <label for="camp[image]">Image</label>
                        <input class="form-control" name="camp[image]"type="text">
                </div>
                
                <div class="form-group">
                        <label for="camp[desc]">Description</label>
                        <textarea class="form-control" name="camp[desc]" rows="10"></textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Submit!</button>
        </form>
        <a href="/posts">Go Back</a>
</div>

<% include ../partials/footer %>