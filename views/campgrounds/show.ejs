<% include ../partials/header %>

  <div class="row">
    <div class="col-lg-6 card align-items-center">
      <h1>
        <%=campgrounds.name%>
      </h1>
      <img class="card-img-top" src="<%= campgrounds.image %>" alt="<%= campgrounds.name %>" />
    </div>

    <div class="col-lg-6 card">
        <div class="card-body">
          <h2 class="card-title">Description</h2>
          <hr>
          <p class="card-text">
            <%=campgrounds.desc%>
          </p>
          <a href="/campgrounds" class="btn btn-secondary">Back to Listing</a>
        </div>
      </div>

  </div>

  <div class="row">
    <div class="col-lg-12 card">
      <h2>Comments</h2>
      <%campgrounds.comments.forEach(comment => {%>
        <hr>
        <p><strong><%=comment.author%></strong></p>
        <p><%=comment.comment%></p>
        <hr>

      <%})%>
    </div>
  </div>


  

  <% include ../partials/footer %>