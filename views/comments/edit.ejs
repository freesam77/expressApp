<% include ../partials/header %>

<div class="col-md-6 offset-md-3">
        <h1>Edit your Comment</h1>
        <form action="/posts/<%=posts_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">

                
                <div class="form-group">
                        <label for="comment[comment]">Comment</label>
                        <textarea class="form-control" name="comment[comment]"type="text" rows="5" value="<%=comment.comment%>"><%=comment.comment%></textarea>
                </div>
                
                <button type="submit" class="btn btn-primary btn-block">Edit Comment</button>
        </form>
        <a href="/posts/<%=posts_id%>">Go Back</a>
</div>

<% include ../partials/footer %>