<% include ../partials/header %>

<div class="col-md-6 offset-md-3">
        <h1>Create a Comment on <%= posts.name %></h1>
        <form action="/posts/<%=posts._id%>/comments" method="POST">

                <div class="form-group">
                        <label for="comment[author]">Writing a comment as</label>
                        <input class="form-control" name="comment[author]"type="text" value="<%=currentUser.username%>" readonly>
                </div>

                <div class="form-group">
                        <label for="comment[comment]">Comment</label>
                        <textarea class="form-control" name="comment[comment]"type="text" rows="5"></textarea>
                </div>
                
                <button type="submit" class="btn btn-primary btn-block">Submit!</button>
        </form>
        <a href="/posts/<%=posts._id%>">Go Back</a>
</div>

<% include ../partials/footer %>